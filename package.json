{
  "name": "create-node-app-tools",
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build-storybook": "turbo run build-storybook",
    "changeset": "changeset",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json,css,sass,scss,less,html,yml,yaml}\"",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint-staged": "lint-staged",
    "prepare": "is-ci || husky",
    "publish-packages": "turbo run lint && changeset version && turbo run build && changeset publish",
    "storybook": "turbo run storybook",
    "test": "turbo run test",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@create-node-app/eslint-config": "*",
    "@eslint/eslintrc": "^3.1.0",
    "eslint-config-turbo": "^2.5.6",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6"
  },
  "dependencies": {
    "tsup": "^8.5.0"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=22.0.0"
  },
  "packageManager": "npm@10.9.2"
}
