{
  "name": "create-awesome-node-app",
  "version": "0.7.0",
  "type": "module",
  "description": "Command line tool to create Node apps with a lot of different templates and extensions.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Create-Node-App/create-node-app.git"
  },
  "bugs": {
    "url": "https://github.com/Create-Node-App/create-node-app/issues"
  },
  "homepage": "https://create-awesome-node-app.vercel.app",
  "keywords": [
    "code generator"
  ],
  "authors": [
    {
      "name": "Ulises Jeremias Cornejo Fandos",
      "email": "ulisescf.24@gmail.com"
    }
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "main": "index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "index.js",
    "dist/**"
  ],
  "bin": {
    "create-awesome-node-app": "index.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "scope": "@create-node-app"
  },
  "scripts": {
    "build": "tsup src/index.ts src/templates.ts --format cjs,esm --dts --sourcemap",
    "dev": "tsup src/index.ts src/templates.ts --watch --format cjs,esm --dts --sourcemap",
    "type-check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx,js}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx,js}' --fix",
    "test": "tsx --test tests/**/*.test.mts",
    "test:src": "npm run test"
  },
  "dependencies": {
    "@create-node-app/core": "^0.5.6",
    "axios": "^1.12.2",
    "ci-info": "^4.3.0",
    "commander": "^14.0.1",
    "prompts": "^2.4.2",
    "semver": "^7.7.2",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@create-node-app/eslint-config-ts": "*",
    "@create-node-app/core": "^0.5.6",
    "@types/node": "^24.5.2",
    "@types/prompts": "^2.4.9",
    "@types/yargs": "^17.0.33",
    "@types/semver": "^7.5.8",
    "nock": "^13.5.4",
    "eslint": "^9.35.0",
    "eslint-config-turbo": "^2.5.8",
    "tsup": "^8.5.0",
    "eslint-plugin-turbo": "^2.5.6",
    "tsx": "^4.19.0"
  }
}
